import com.ember.peek.*;
import com.ember.peek.RaspiDevice;

RaspiDevice raspi;

void setupRaspi(String host, String user, String pwd, int timeout){
    raspi = new RaspiDevice(host, user, pwd);
    try 
    {
        raspi.echo(true);
        raspi.connect();
        raspi.login("pi@br-2307:");

        raspi.send("killall Z3GatewayHost");

        raspi.expect("./super/Z3GatewayHost/build/exe/Z3GatewayHost -n 0 -p /dev/ttyACM0", "Z3GatewayHost>", timeout);
    }
    catch (Exception e) 
    {
        e.printStackTrace();
    }
}

